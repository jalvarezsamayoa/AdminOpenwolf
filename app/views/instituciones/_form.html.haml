= simple_form_for institucion, html: { class: 'form-horizontal'} do |f|
  = f.input :codigo, :autofocus => true
  = f.input :unidad_ejecutora
  = f.input :entidad
  = f.input :nombre, :input_html => {:size => 60}
  = f.input :abreviatura
  = f.input :parent_id, :as => :select, :collection => @padres, :include_blank => false if (@institucion.new_record? or !@institucion.root?  )
  = f.input :tipoinstitucion_id, :as => :select , :collection => Institucion::TIPOS_OPTIONS, :include_blank => false
  = f.input :direccion, :input_html => {:size => 60}
  = f.input :telefono, :input_html => {:size => 60}
  = f.input :activa
  = f.input :usasolicitudesprivadas
  = f.input :email, :input_html => {:size => 60}
  = f.input :webpage, :input_html => {:size => 60}
  = f.input :logo, :as => :file
  .f-actions
    = f.button :submit, :class => "btn btn-primary"
    = link_to "Cancelar", instituciones_path, :class => "btn"
