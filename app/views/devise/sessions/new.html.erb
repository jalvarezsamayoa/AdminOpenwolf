<div class="row-fluid">
  <div class="login-box">
    <div class="icons">
      <a href="index.html"><i class="icon-home"></i></a>
      <a href="#"><i class="icon-cog"></i></a>
    </div>
    <h2><%= t("devise.sessions.sign_in") %></h2>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
    <fieldset>

      <div class="input-prepend" title="Username">
        <span class="add-on"><i class="icon-user"></i></span>
        <%= f.text_field :email, :class => 'input-large span10' %>
      </div>
      <div class="clearfix"></div>
      <div class="input-prepend" title="Password">
        <span class="add-on"><i class="icon-lock"></i></span>
        <%= f.password_field :password, :class => 'input-large span10' %>
      </div>
      <div class="clearfix"></div>


      <div class="btn-group button-login">
        <button type="submit" class="btn btn-primary"><i class="icon-off icon-white"></i></button>
        <button type="submit" class="btn btn-primary"><%= t("devise.sessions.submit") %></button>
      </div>
      <div class="clearfix"></div>

      <hr>
      <%= render "devise/shared/links" %>
    </fieldset>
    <% end %>

  </div><!--/span-->
</div>
