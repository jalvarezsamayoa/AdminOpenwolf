.navbar
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{"data-target" => ".top-nav.nav-collapse,.sidebar-nav.nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "index.html"}
        = image_tag('title-bar.png', :alt => "Openwolf v1.0 - Modulo Administracion")
        %span Openwolf v1.0 - Módulo Administración
      / start: Header Menu
      .btn-group.pull-right
        %a.btn{:href => "#"}
          %i.icon-warning-sign
          %span.hidden-phone.hidden-tablet notifications
          %span.label.label-important.hidden-phone 2
          %span.label.label-success.hidden-phone 11
        %a.btn{:href => "#"}
          %i.icon-tasks
          %span.hidden-phone.hidden-tablet tasks
          %span.label.label-warning.hidden-phone 17
        %a.btn{:href => "#"}
          %i.icon-envelope
          %span.hidden-phone.hidden-tablet messages
          %span.label.label-success.hidden-phone 9
        %a.btn{:href => "#"}
          %i.icon-wrench
          %span.hidden-phone.hidden-tablet settings
        / start: User Dropdown
        %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          %i.icon-user
          %span.hidden-phone.hidden-tablet admin
          %span.caret
        %ul.dropdown-menu
          %li
            = link_to t("navigation.profile"), "#", :title => t("navigation.profile")
          %li.divider
          %li
            = link_to t("navigation.logout"), logout_path, :title => t("navigation.logout")
        / end: User Dropdown
      / end: Header Menu